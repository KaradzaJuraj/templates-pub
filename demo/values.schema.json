{
  "properties": {
    "name": {
      "description": "Application name",
      "type": "string",
      "pattern": "^[a-z0-9](?:[a-z0-9-]*[a-z0-9])?$",
      "maxLength": 10
    },
    "replicas": {
      "description": "Number of replicas",
      "type": "integer",
      "multipleOf" : 2,
      "minimum": 0,
      "maximum": 5,
      "exclusiveMinimum": true,
      "exclusiveMaximum": true
    },
    "image": {
      "description": "Container Image",
      "type": "string"
    },
    "version": {
      "description": "Container image version",
      "type": "string",
      "minLength": 2,
      "maxLength": 10
    },
    "service": {
      "description": "Expose your application",
      "type": "boolean"
    },
    "wow": {
      "description": "world of warcraft",
      "type": "string",
      "pattern": "^(\\([0-9]{3}\\))?[0-9]{3}-[0-9]{4}$"
    }
  },
  "order": [
    "name",
    "replicas",
    "script",
    "json",
    "image",
    "version",
    "wow",
    "service"
  ],
  "required": ["name", "replicas", "image", "version", "wow"],
  "title": "Values",
  "type": "object"
}
